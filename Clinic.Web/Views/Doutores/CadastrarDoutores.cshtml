@model Clinic.Dominio.Entities.Doutores
@{
    ViewData["Title"] = "CadastrarDoutores";
}

@section Scripts{
    <script>
        $('.maisinst').click(function (e) {
            var f = $(this).parent().parent(),
                c = f.clone(true, true);
            c.insertAfter(f);
        });
    </script>

    <script>
        $('.menosinst').click(function (e) {
            $(this).parent().parent().remove();
        });
    </script>

    <script>
        $('.maisexp').click(function (e) {
            var f = $(this).parent().parent(),
                c = f.clone(true, true);
            c.insertAfter(f);
        });
    </script>

    <script>
        $('.menosexp').click(function (e) {
            $(this).parent().parent().remove();
        });
    </script>
}

<div class="content">
    <div class="row">
        <div class="col-sm-4 col-3">
            <h4 class="page-title">Add Doutores</h4>
        </div>
        <div class="col-sm-8 col-9 text-right m-b-20">
            <a href=@Url.Action("Index","Doutores") class="btn btn-primary btn-rounded"><i class="fa fa-backward"></i> Voltar</a>
        </div>
        @*<div class="col-sm-12">
                <h4 class="page-title">Add Doutores</h4>
            </div>*@
    </div>
    <form asp-action="CadastrarDoutores" method="post" enctype="multipart/form-data">
        <div class="card-box">
            <h3 class="card-title">Informações Básicas</h3>
            <div class="row">
                <div class="col-md-12">
                    <div class="profile-img-wrap">
                        <img class="inline-block" src="~/assets/img/user.jpg" alt="user">
                        <div class="fileupload btn">
                            <span class="btn-text">upload</span>
                            <input type="file" class="upload" asp-for="FotoPerfil">
                        </div>
                    </div>
                    <div class="profile-basic">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-focus">
                                    <label class="focus-label">Primeiro Nome</label>
                                    <input type="text" class="form-control floating" asp-for="Nome">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-focus">
                                    <label class="focus-label">Último Nome</label>
                                    <input type="text" class="form-control floating" asp-for="Sobrenome">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-focus">
                                    <label class="focus-label">Data de Nascimento</label>
                                    <div class="cal-icon">
                                        <input class="form-control floating datetimepicker" type="text" asp-for="DataNascimento">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-focus select-focus">
                                    <label class="focus-label">Sexo</label>
                                    <select class="select form-control floating" asp-for="Sexo">
                                        <option>--Selecione--</option>
                                        <option value="M">Masculino</option>
                                        <option value="F">Feminino</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-focus">
                                    <label class="focus-label">Especialidade</label>
                                    <input type="text" class="form-control floating" asp-for="Especialidade">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-focus">
                                    <label class="focus-label">E-mail</label>
                                    <input type="text" class="form-control floating" asp-for="Email">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-box">
            <h3 class="card-title">Informações de Contato</h3>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group form-focus">
                        <label class="focus-label">Endereço</label>
                        <input type="text" class="form-control floating" asp-for="Endereco">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="focus-label">Cidade</label>
                        <input type="text" class="form-control floating" asp-for="Cidade">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="focus-label">País</label>
                        <input type="text" class="form-control floating" asp-for="Pais">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="focus-label">Pin Code</label>
                        <input type="text" class="form-control floating">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="focus-label">Número de Telefone</label>
                        <input type="text" class="form-control floating" asp-for="Telefone">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-box">
            <h3 class="card-title">Informação de Formação</h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="focus-label">Instituição</label>
                        <input type="text" class="form-control floating" asp-for="Escola">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="focus-label">Curso</label>
                        <input type="text" class="form-control floating" asp-for="Curso">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="focus-label">Data Inicio</label>
                        <div class="cal-icon">
                            <input type="text" class="form-control floating datetimepicker" asp-for="DataInicio">
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="focus-label">Data Fim</label>
                        <div class="cal-icon">
                            <input type="text" class="form-control floating datetimepicker" asp-for="DataFim">
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="focus-label">Grau</label>
                        <input type="text" class="form-control floating" asp-for="Grau">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="focus-label">Grade</label>
                        <input type="text" class="form-control floating">
                    </div>
                </div>
            </div>
            <div class="add-more">
                <a href="#" class="btn btn-primary maisinst"><i class="fa fa-plus"></i> Add Mais Instituição</a>
                <a href="#" class="btn btn-danger menosinst"><i class="fa fa-trash"></i> Remove Instituição</a>
            </div>
        </div>
        <div class="card-box">
            <h3 class="card-title">Experiência Profissional</h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="focus-label">Empresa</label>
                        <input type="text" class="form-control floating" asp-for="Empresa">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="focus-label">Localização</label>
                        <input type="text" class="form-control floating" asp-for="CidadeEmpresa">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="focus-label">Posição</label>
                        <input type="text" class="form-control floating" asp-for="Posicao">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="focus-label">Perído De</label>
                        <div class="cal-icon">
                            <input type="text" class="form-control floating datetimepicker" asp-for="PeriodoDe">
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-focus">
                        <label class="focus-label">Período Até</label>
                        <div class="cal-icon">
                            <input type="text" class="form-control floating datetimepicker" asp-for="PeriodoAte">
                        </div>
                    </div>
                </div>
            </div>
            <div class="add-more">
                <a href="#" class="btn btn-primary maisexp"><i class="fa fa-plus"></i> Add Mais Experiência</a>
                <a href="#" class="btn btn-danger menosexp"><i class="fa fa-trash"></i> Remove Experiência</a>
            </div>
        </div>
        <div class="text-center m-t-20">
            <button class="btn btn-primary submit-btn" type="submit">Cadastrar</button>
        </div>
    </form>
</div>
